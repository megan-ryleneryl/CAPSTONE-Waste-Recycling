{
  "name": "recycling-platform-backend",
  "version": "1.0.0",
  "description": "Backend API for the Recycling Platform - connecting waste givers with collectors",
  "main": "server.js",
  "scripts": {
    "server": "node server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "clean": "rm -rf uploads/temp/*",
    "setup": "node scripts/setup.js",
    "start": "node server.js"
  },
  "keywords": [
    "recycling",
    "environment",
    "waste-management",
    "firebase",
    "nodejs",
    "express"
  ],
  "author": "Your Team Name",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase": "^10.7.1",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
